<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-black">Log in</h1>
        <%= form_for :session, url: login_path do |f| %>
          <div class="form-group">
            <%= f.label :name, class: "text-black" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password, class: "text-black" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
            <%= f.submit "登録", class: "btn-block btn-black" %>
            <%= link_to "新規登録はこちら", new_user_path, class: "text-black" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
