<div class="posts-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6 posts-new-container">
        <h1 class="text-center text-black">Post</h1>
        <%= form_for @post do |f| %>
          <div class="form-group">
            <%= f.label :English, class: "text-black" %>
            <%= f.text_area :content, :placeholder => "Enter your example sentences ...", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :Japanese, class: "text-black" %>
            <%= f.text_area :description, :placeholder => "日本語訳を入力してください", class: "form-control" %>
          </div>
            <%= f.submit "投稿", class: "btn-block btn-black" %>
        <% end %>
      </div>
    </div>
  </div>
</div>