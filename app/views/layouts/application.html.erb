<!DOCTYPE html>
<html>
  <head>
    <title>Makexample</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  </head>

  <body>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>
    
    <nav class="navbar navbar-expand-md navbar-dark bg-primary navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="ナビゲーションの切替">
            <span class="navbar-toggler-icon"></span>
            <span class="navbar-toggler-icon"></span>
            <span class="navbar-toggler-icon"></span>
            <span class="navbar-toggler-icon"></span>
          </button>
        
          <%= link_to root_path do %>
            <span class="navbar-brand">
            <%= icon('fas', 'globe-americas') %> MakeXample</span>
          <% end %>  
        </div>
        
        <div class="collapse navbar-collapse" id="navbar">
          <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
              <%= link_to "#" do %>
                <%= icon('fas', 'user-check') %>
                <span class="nav-name">Mypage</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to "#" do %>
                <%= icon('fa', 'search-plus') %>
                <span class="nav-name">Search</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_post_path do %>
                <%= icon('far', 'edit') %>
                <span class="nav-name">Note</span>
              <% end %>
            <li class="nav-item">
              <%= link_to root_path do %>
                <%= icon('fas', 'sign-out-alt') %>
                <span class="nav-name">Log out</span>
              <% end %>
            </li  class="nav-item">
          </ul>
          
          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>
        </div>
      </div>
    </nav>
    
    <%= yield %>
    
    <script>
      $(function(){
        $(".alert").fadeOut(5000);
      });
    </script>
    
    
  </body>
</html>
